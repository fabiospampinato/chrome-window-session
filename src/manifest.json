{
  "manifest_version": 2,
  "name": "Window Session",
  "description": "Save each window as a separate session, automatically.",
  "version": "1.1.0",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_title": "Window Session",
    "default_popup": "popup.html",
    "default_icon": "icon-256.png"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "64": "icon-64.png",
    "128": "icon-128.png",
    "256": "icon-256.png"
  }
}
