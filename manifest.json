{
  "manifest_version": 3,
  "name": "Window Session",
  "description": "Save each window as a separate session, automatically.",
  "version": "1.2.0",
  "action": {
    "default_title": "Window Session",
    "default_icon": "./resources/icon/icon-256.png",
    "default_popup": "./src/popup/index.html"
  },
  "background": {
    "service_worker": "./assets/background.js"
  },
  "icons": {
    "256": "./resources/icon/icon-256.png"
  },
  "permissions": [
    "storage",
    "tabs",
    "tabGroups",
    "windows"
  ]
}
